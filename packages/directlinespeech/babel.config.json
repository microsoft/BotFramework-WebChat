{
  "env": {
    "test": {
      "plugins": ["babel-plugin-istanbul"],
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": "commonjs",
            "targets": {
              "node": "current"
            }
          }
        ]
      ]
    }
  },
  "plugins": [
    "@babel/plugin-transform-runtime",
    [
      "babel-plugin-transform-inline-environment-variables",
      {
        "include": ["module_format", "npm_package_version", "transpiler"]
      }
    ]
  ],
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": "commonjs",
        "targets": {
          "browsers": ["last 2 versions"]
        }
      }
    ]
  ],
  "sourceMaps": "inline",
  "sourceRoot": "directlinespeech:///"
}
