{
  "env": {
    "test": {
      "plugins": ["babel-plugin-istanbul"]
    }
  },
  "plugins": [
    "@babel/plugin-transform-typescript",
    "@babel/plugin-transform-runtime",
    [
      "transform-inline-environment-variables",
      {
        "include": ["npm_package_version"]
      }
    ]
  ],
  "presets": [
    [
      "@babel/preset-env",
      {
        "forceAllTransforms": true,
        "modules": "commonjs"
      }
    ]
  ],
  "sourceMaps": "inline",
  "sourceRoot": "core:///"
}
