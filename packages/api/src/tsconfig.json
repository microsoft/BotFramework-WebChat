{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "pretty": true,
    "resolveJsonModule": true, // Required for localization files
    "skipLibCheck": true,
    "sourceMap": true
  }
}
